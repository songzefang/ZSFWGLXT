<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qnm.mapper.VisitorMapper">

	<select id="login" parameterType="com.qnm.entity.Visitor" resultType="com.qnm.entity.Visitor">
		SELECT *
		From visitor
		WHERE adminName = #{visPhone} and
		adminPwd = #{visPwd}
	</select>

	<select id="selectList" resultType="com.qnm.entity.Visitor">
		select *
		from visitor
		limit #{limit},#{offset}
	</select>
	
	<update id="updateState">
		update visitor
		set state = #{state}
		where id = #{id}
	</update>

</mapper>